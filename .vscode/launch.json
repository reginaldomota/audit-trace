{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/src/Api/bin/Debug/net8.0/Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch Jobs (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-jobs",
      "program": "${workspaceFolder}/src/Jobs/bin/Debug/net8.0/Jobs.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Jobs",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ],
  "compounds": [
    {
      "name": "Launch API + Jobs (Debug)",
      "configurations": [
        "Launch API (Debug)",
        "Launch Jobs (Debug)"
      ],
      "presentation": {
        "hidden": false,
        "group": "all",
        "order": 1
      },
      "stopAll": true
    }
  ]
}
